#include <iostream>
using namespace std;
int main() {
   int n,a[100]={0},c=0;
   cin>>n;
   for(int i=0;i<n;i++){
       cin>>a[i];
      
   }
   for(int j=0;j<=n;j++){
       if(a[j]!=a[j+1]){
        c++;   
       }
     
   }
   if(c>1){
       cout<<"no";
   }
   else{
       cout<<"yes";
   }

    return 0;
}
